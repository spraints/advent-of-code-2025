#!/bin/bash

set -eu

day="$(printf "%02d" "$1")"
sep() {
  printf '================\n'
}

sol=solutions/${day}.txt
if [ -f "${sol}" ]; then
  sep
  (set -x; cat ${sol})
fi

for input in input/${day}*; do
  if [ -e rb/${day}.rb ]; then
    sep
    (set -x; ruby rb/${day}.rb ${input})
  fi
  if [ -e zig/${day}.zig ]; then
    sep
    (set -x; zig run zig/${day}.zig -- ${input})
  fi
done
